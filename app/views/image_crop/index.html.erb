<% unless @pictures.present? %>
  <h1 style="text-align: center;">There is no image !!!</h1>
<% end %>

<% if @pictures.present? %>
  <h1 style="text-align: center;">Images</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Action</th>
    </tr>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.profile_pic_url.split('/')[-1] %></td>
        <td><%= link_to "View", image_crop_path(id: picture), class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </table><br>
  <div class = "digg_pagination" >
    <%= will_paginate @pictures %>
  </div>
<% end %>

<%= render partial: 'shared/profile_pic_upload_modal', :locals => { :picture => Picture.new, :url => image_crop_index_path, :request => :post} %>

<%= link_to 'Add New Image', 'javascript:void(0);', data: {toggle: "modal", target: "#profile_pic_upload"}, class: 'btn btn-primary' %>